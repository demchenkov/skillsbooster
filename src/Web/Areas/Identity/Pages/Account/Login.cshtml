@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-dark">
    <form method="post">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input placeholder="Email" class="form-control" asp-for="Input.Email">
        </div>
        <div class="form-group">
            <input placeholder="Password" asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Log In</button>
        </div>

        <p class="login-callout mt-3">
            New to SkillsBooster?
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
        </p>
        <a class="forgot"  asp-page="./ForgotPassword">Forgot your email or password?</a>
    </form>
</div>


