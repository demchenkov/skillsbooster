@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-dark">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2 class="sr-only">Register Form</h2>
        <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input placeholder="Email" class="form-control" asp-for="Input.Email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input placeholder="Password" asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input placeholder="ConfirmPassword" asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Register</button>
        </div>

        <p class="login-callout mt-3">
            Have already has account?
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a>
        </p>
        <a class="forgot" asp-page="./ForgotPassword">Forgot your email or password?</a>
    </form>
</div>

